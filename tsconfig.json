{
  "include": ["configs/**/*", "test/**/*", "scripts/**/*"],
  "compilerOptions": {
    "strict": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitReturns": false,
    "resolveJsonModule": true,
    "module": "CommonJS",
    "target": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "exclude": ["node_modules/**/*"]
}
